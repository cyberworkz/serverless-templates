{
  "name": "company_service",
  "version": "0.1.0",
  "description": "GoodRefz company service",
  "author": "Haiko van der Schaaf",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "AWS_PROFILE=goodrefz sls offline start",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "deploy": "AWS_PROFILE=cyberworkz sls deploy --stage dev"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "aws-sdk": "^2.789.0",
    "aws-serverless-express": "^3.3.5",
    "builder-pattern": "^1.2.4",
    "ksuid": "^2.0.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typescript-collections": "^1.3.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/aws-lambda": "^8.10.15",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "acorn": "^8.0.5",
    "jest": "^23.5.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-optimize": "^4.0.2-rc.1",
    "serverless-plugin-typescript": "1.1.7",
    "serverless-stage-manager": "^1.0.5",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
